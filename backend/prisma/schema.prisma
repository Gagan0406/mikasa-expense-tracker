generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum VerificationType {
  email
  PHONE
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  username        String    @unique
  name            String
  phone           String?
  password        String
  isEmailVerified DateTime?
  isPhoneVerified DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([id])
}

model VerificationToken {
  id         String           @id @default(cuid())
  identifier String
  type       VerificationType
  token      String           @unique
  expires    DateTime

  @@unique([identifier, type])
  @@index([identifier, type, token], name: "verification_token_identifier_type_token_idx")
}
